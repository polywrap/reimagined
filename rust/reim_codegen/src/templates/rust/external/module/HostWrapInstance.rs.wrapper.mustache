use reim_wrap::{ ExternalModule };
use dt::{ send };

struct HostModule {}

impl HostModule {
    pub fn new() -> Self {
        HostModule {}
    }
}

impl ExternalModule for HostModule {
  pub fn invoke_resource(&self, resource: u32, buffer: &[u8]) -> Vec<u8> {
    send(
        [resource.to_be_bytes(), buffer].concat()
    )
  }
}
